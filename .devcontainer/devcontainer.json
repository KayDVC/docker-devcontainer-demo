{
    "name": "Simple Full Stack App",
    "dockerComposeFile": "./../dockerfiles/docker-compose.yml",
    "service": "flaskapp",
    "shutdownAction": "stopCompose",
    "workspaceFolder": "/home/NRuser/flaskapp/",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"donjayamanne.python-extension-pack",
				"ritwickdey.LiveServer"
			]
		}
	},
    "overrideCommand": true,
    "postCreateCommand": "chmod +x scripts/init.sh && scripts/init.sh"
}